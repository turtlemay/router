{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "allowUnusedLabels": false,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": [
    "./src"
  ]
}